{
    "Resources": {
        "CommentTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "TableName" : "Comment",
                "AttributeDefinitions" : [
                    {
                        "AttributeName": "UserId",
                        "AttributeType": "N"
                    },
                    {
                        "AttributeName": "Timestamp",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema" : [
                    {
                        "AttributeName": "UserId",
                        "KeyType": "HASH"
                    },
                    {
                        "AttributeName": "Timestamp",
                        "KeyType": "RANGE"
                    }
                ],
                "ProvisionedThroughput" : {
                    "ReadCapacityUnits": "1",
                    "WriteCapacityUnits": "1"
                }
            }
        }
    }
}